{
  "name": "@niroe5tar64/devcontainer",
  "version": "1.0.1",
  "description": "Shared DevContainer configurations for AI-driven development",
  "type": "module",
  "bin": {
    "devcontainer": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/niroe5tar64/shared-devcontainer.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "bun run scripts/build/build.ts",
    "build:self": "bun run scripts/build/build.ts --mode=self",
    "build:client": "bun run scripts/build/build.ts --mode=client",
    "build:cli": "tsup",
    "generate-types": "bun run scripts/ops/generate-types.ts",
    "setup-claude-plugins": "bun run scripts/ops/setup-claude-plugins.ts",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "validate": "bun run typecheck && bun run check",
    "prepublishOnly": "bun run build:cli"
  },
  "keywords": [
    "devcontainer",
    "development-environment",
    "ai-development"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "citty": "^0.1.6",
    "jiti": "^2.6.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^20.10.0",
    "bun-types": "^1.3.5",
    "json-schema-to-typescript": "^15.0.4",
    "tsup": "^8.5.1",
    "typescript": "^5.3.3"
  }
}
